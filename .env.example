# TFGrid AI-Agent Configuration
# Copy this file to .env and customize your settings
# This is the ONLY configuration file you need to edit

# ==============================================================================
# THREEFOLD GRID CONFIGURATION
# ==============================================================================

# Network: main, test, or dev
export TF_VAR_tfgrid_network="main"

# Node ID for AI Agent VM (find on ThreeFold Grid Explorer)
export TF_VAR_ai_agent_node=1234

# VM Resources
export TF_VAR_ai_agent_cpu=4
export TF_VAR_ai_agent_mem=8192   # 8GB RAM
export TF_VAR_ai_agent_disk=100   # 100GB storage

# ==============================================================================
# NETWORK CONFIGURATION (Optional)
# ==============================================================================

# Connectivity network: wireguard or mycelium
# Controls which network is used for SSH/Ansible connectivity
export CONNECTIVITY_NETWORK="wireguard"  # Default: WireGuard
#export CONNECTIVITY_NETWORK="mycelium"  # Alternative: Mycelium IPv6

# ==============================================================================
# GIT CONFIGURATION (Optional)
# ==============================================================================

# Git Identity (for commits made by AI agent)
export GIT_USER_NAME="Your Name"
export GIT_USER_EMAIL="you@example.com"

# Git Providers (optional, for convenience)
export GITHUB_USER="myusername"
export GITEA_URL="git.example.com"
export GITEA_USER="myusername"
export GITLAB_USER="myusername"

# ==============================================================================
# NOTES
# ==============================================================================
# Sensitive data (mnemonic, API keys) should NOT be in this file.
# Set them as environment variables using:
#   set -x TF_VAR_mnemonic (cat ~/.config/threefold/mnemonic)
#   set -x ANTHROPIC_API_KEY (cat ~/.config/anthropic/api_key)  # Optional
